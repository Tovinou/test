{
  "name": "form-registration-tests",
  "version": "1.0.0",
  "scripts": {
    "test": "playwright test",
    "test:e2e": "playwright test tests/e2e/specs/",
    "test:form": "playwright test tests/e2e/specs/form-*.spec.ts",
    "test:ui": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report test-results/html-report",
    "test:ci": "playwright test --reporter=html,line",
    "install:browsers": "playwright install",
    "lint": "eslint tests/ --ext .ts",
    "lint:fix": "eslint tests/ --ext .ts --fix"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}